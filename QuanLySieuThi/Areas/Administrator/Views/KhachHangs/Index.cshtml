@model IEnumerable<QuanLySieuThi.Models.Entities.KhachHang>

@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2 style="color:blue;font-style:oblique">Danh sách khách hàng</h2>

<p>
    <i class="fa fa-newspaper-o"></i>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table" border="1">
    <tr style="color:red;font-size:15px;font-style:oblique">
        <th>
            @Html.DisplayNameFor(model => model.MaKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiemThuong)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiemThuong)
            </td>
            <td>
                <i class="fa fa-edit" style="color:blue;"></i>
                @Html.ActionLink("Thay đổi", "Edit", new { id = item.MaKH }) |
                <i class="fa fa-deaf" style="color:blue;"></i>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaKH }) |
                <i class="fa fa-remove" style="color:blue;"></i>
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaKH })
            </td>
        </tr>
    }

</table>
