@model IEnumerable<QuanLySieuThi.Models.Entities.LoaiHang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2 style="color:blue;font-style:oblique">Danh sach laoi hang</h2>

<p>
    <i class="fa fa-newspaper-o"></i>
    @Html.ActionLink("Tao moi", "Create")
</p>
<table class="table" border="1">
    <tr style="color:red;font-size:15px;font-style:oblique">
        <th>
            @Html.DisplayNameFor(model => model.MaLH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChungLoai.Ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChungLoai.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                <i class="fa fa-edit" style="color:blue;"></i>
                @Html.ActionLink("Thay doi", "Edit", new { id = item.MaLH }) |
                <i class="fa fa-deaf" style="color:blue;"></i>
                @Html.ActionLink("Chi Tiet", "Details", new { id = item.MaLH }) |
                <i class="fa fa-remove" style="color:blue;"></i>
                @Html.ActionLink("Xoa", "Delete", new { id = item.MaLH })
            </td>
        </tr>
    }

</table>
