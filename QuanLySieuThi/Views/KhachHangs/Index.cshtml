@model IEnumerable<QuanLySieuThi.Models.Entities.KhachHang>

@{
    ViewData["Title"] = "Index";
}

<h2>Thông tin chi tiết khách hàng</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayCapThe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayMuaGanNhat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiemThuong)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapThe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayMuaGanNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiemThuong)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaKH">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaKH">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaKH">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
