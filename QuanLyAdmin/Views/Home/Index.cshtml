
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Chào mừng bạn đến với trang quản lý Vinmart</h2>
<div class="banner" style="background-color:#3385ff;">
    <div class="container text-center">

        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:70%;margin:0px auto;">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Content/images/01.jpg" alt="" style="width:100%;height: 700px">
                </div>

                <div class="item">
                    <img src="~/Content/images/02.jpg" alt="" style="width:100%;height: 700px">
                </div>

                <div class="item">
                    <img src="~/Content/images/03.jpg" alt="" style="width:100%;height: 700px">
                </div>
                <div class="item">
                    <img src="~/Content/images/04.jpg" alt="" style="width:100%;height: 700px">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
